<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harshit.flipmooctemperature.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Temperature in Farenheit"
        android:id="@+id/temperature"
        android:textColor="@color/resultcolor"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:id="@+id/button1"
        android:textColor="#e1150a79"
        android:layout_below="@+id/temperature"
        android:background="@color/colorPrimary"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resulttext"
        android:layout_below="@+id/button1"
        android:hint="I will display the result"
        android:textColor="@color/resultcolor"
        android:layout_centerInParent="true"
        />


</RelativeLayout>
